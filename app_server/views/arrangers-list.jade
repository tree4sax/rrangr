extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .error= message
      .row.list-group
        each arranger in arrangers
          .col-xs-12.list-group-item
            h4 
              a(href="/arranger/#{arranger._id}")= arranger.name
              small &nbsp;
                +outputRating(arranger.rating)
              span.badge.pull-right.badge-default= arranger.experience
            p.emailAddress= arranger.email
            p
              each specialty in arranger.specialties
                span.label.label-warning= specialty
                &nbsp;
    .col-xs-12.col-sm-4 
      p.lead= sidebar
